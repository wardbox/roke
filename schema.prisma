datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String      @id @default(uuid())
  username   String      @unique
  email      String      @unique
  isAdmin    Boolean     @default(false)

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}
